<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="REV_UTS_72220538_Mobile.MainPage"
             Title="Authentication">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20" VerticalOptions="Center">
            <Entry x:Name="usernameEntry" Placeholder="Username" />
            <Entry x:Name="emailEntry" Placeholder="Email" IsVisible="False" />
            <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="True" />
            <Entry x:Name="confirmPasswordEntry" Placeholder="Confirm Password" IsPassword="True" IsVisible="False" />

            <Button Text="Register" x:Name="toggleButton" Clicked="OnToggleButtonClicked" />
            <Button Text="Submit" Clicked="OnSubmitButtonClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
