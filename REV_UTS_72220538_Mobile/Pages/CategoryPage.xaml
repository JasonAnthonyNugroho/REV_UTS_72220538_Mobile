<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="REV_UTS_72220538_Mobile.Pages.CategoryPage"
             Title="CategoryPage">
    <StackLayout Padding="20">
        <Button Text="Refresh Categories" Clicked="OnRefreshClicked" />

        <CollectionView x:Name="CategoryCollectionView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="Black" Padding="10" Margin="10">
                        <StackLayout>
                            <Label Text="{Binding categoryId}" FontAttributes="Bold"/>
                            <Label Text="{Binding name}"/>
                            <Label Text="{Binding description}"/>
                            <StackLayout Orientation="Horizontal">
                                <Button Text="Edit" Clicked="OnEditClicked"/>
                                <Button Text="Delete" Clicked="OnDeleteClicked"/>
                            </StackLayout>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>