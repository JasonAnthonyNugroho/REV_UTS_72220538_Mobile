<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="REV_UTS_72220538_Mobile.Pages.EditCategoryPage"
             Title="Edit Category">
    <StackLayout Padding="20">
        <Label Text="Edit Category" FontSize="24" HorizontalOptions="Center" />

        <Entry x:Name="CategoryNameEntry" 
               Text="{Binding category.name}" 
               Placeholder="Category Name"
               FontSize="18" />

        <Editor x:Name="CategoryDescriptionEditor" 
                Text="{Binding category.description}" 
                Placeholder="Category Description"
                AutoSize="TextChanges"
                HeightRequest="150" 
                FontSize="18" />

        <StackLayout Orientation="Horizontal" Spacing="20" HorizontalOptions="Center">
            <Button Text="Save" 
                    Clicked="OnSaveClicked" 
                    BackgroundColor="Green" 
                    TextColor="White" 
                    FontSize="18" />

            <Button Text="Cancel" 
                    Clicked="OnCancelClicked" 
                    BackgroundColor="Red" 
                    TextColor="White" 
                    FontSize="18" />
        </StackLayout>
    </StackLayout>
</ContentPage>